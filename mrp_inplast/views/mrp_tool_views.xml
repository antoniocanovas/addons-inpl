<?xml version='1.0' encoding='UTF-8'?>
<odoo>

    <record id="mrp_tool_default_tree" model="ir.ui.view">
        <field name="active" eval="True"/>
        <field name="arch" type="xml">
            <tree editable="bottom">
                <field name="display_name"/>
                <field name="pnt_type"/>
                <field name="pnt_tool_id" optional="hide"/>
                <field name="pnt_gaps" optional="hide"/>
                <field name="pnt_product_id" optional="hide"/>
            </tree>
        </field>
        <field name="field_parent" eval="False"/>
        <field name="groups_id" eval="[(6, 0, [])]"/>
        <field name="inherit_id" eval="False"/>
        <field name="key" eval="False"/>
        <field name="mode">primary</field>
        <field name="model">pnt.mrp.tool</field>
        <field name="name">Default Tree View </field>
        <field name="priority">16</field>
        <field name="type">tree</field>
    </record>

    <record id="mrp_tool_default_form" model="ir.ui.view">
        <field name="active" eval="True"/>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <h2>
                        <field name="name" required="1"/>
                    </h2>
                    <group>
                        <field name="pnt_type" required="1" readonly="pnt_product_id.id"/>
                        <field name="pnt_tool_id" invisible="pnt_type == 'tool'" required="pnt_type == 'accesory'"/>
                        <field name="pnt_product_id" domain="[('pnt_product_type','in',['other'])]"/>
                        <field name="pnt_cycles"/>
                        <field name="pnt_gaps"/>
                    </group>
                    <field name="pnt_note"/>
                </sheet>
            </form>
        </field>
        <field name="field_parent" eval="False"/>
        <field name="groups_id" eval="[(6, 0, [])]"/>
        <field name="inherit_id" eval="False"/>
        <field name="key" eval="False"/>
        <field name="mode">primary</field>
        <field name="model">pnt.mrp.tool</field>
        <field name="name">Default Form View </field>
        <field name="priority">16</field>
        <field name="type">form</field>
    </record>

