<?xml version='1.0' encoding='UTF-8'?>
<odoo>

    # Datos para rec√°lculo de tarifas:
    <record id="inplast_product_template_inh_form" model="ir.ui.view">
        <field name="name">inplast.product.template.inh.form</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//group[@name='description']" position="after">
                <group name="pricelist_recalculation" string="Product prices recalculation">
                    <field name="pnt_pricelist_weight"/>
                    <field name="pnt_margin1_percent"/>
                    <field name="pnt_margin2_percent"/>
                    <field name="pnt_margen3_amount"/>
                </group>
            </xpath>
        </field>
        <field name="priority">99</field>
        <field name="type">form</field>
    </record>

</odoo>
