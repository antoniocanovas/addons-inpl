<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">

    <t t-name="frondeskCustom.frondesk_view" t-inherit="frontdesk.VisitorForm" t-inherit-mode="extension">
        <xpath expr="//button[hasclass('btn')]" position="before">

              <t t-name="website_form_require_legal.s_website_form_legal" >
                        <div
                                class="col-12 s_website_form_legal form-group s_website_form_field s_website_form_required s_website_form_custom"
                                data-name="Legal Terms"
                        >
                                <div class="col-sm" style="margin-top: 20px;">
                                    <div class="form-check">
                                        <input
                                                type="checkbox"
                                                required="1"
                                                class="s_website_form_input form-check-input"
                                        />
                                        <span class="form-check-label">
                                            Agree to
                                            <a
                                                    t-attf-href="/politicas-de-la-empresa" target="_blank"
                                            >terms and conditions
                                            </a>
                                        </span>
                                        <div class="invalid-feedback">
                                            You must agree before submitting.
                                        </div>
                                    </div>
                                </div>

                        </div>
                    </t>

        </xpath>

    </t>


</templates>


